@model IEnumerable<SideOffice.Infra.CrossCutting.Identity.Models.RentViewModels.RentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Aluguéis</h1>
<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="d-none">
                @Html.DisplayNameFor(model => model.Rent_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start_datetime)
            </th>
            <th>
