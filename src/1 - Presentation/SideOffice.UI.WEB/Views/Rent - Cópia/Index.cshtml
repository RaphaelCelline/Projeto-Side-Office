        <tr>
            <td class="d-none">
                @Html.DisplayFor(modelItem => item.Rent_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
